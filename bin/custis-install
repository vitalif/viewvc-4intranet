#!/bin/sh
# ViewVC installation script for CustIS

if [ -f custis-install-config ]; then
    . custis-install-config
else
    cat >custis-install-config <<EOF
CVS_CRONJOB=
CVS_USER=www-data
CVSROOT=
SVNROOT=
SVNEXCLUDE=

DB_HOST=
DB_PORT=
DB_SOCKET=/var/run/mysqld/mysqld.sock
DB=
DB_USER=
DB_PASSWD=

VIEWVC_DIR=
http_proxy=
EOF
    echo Empty 'custis-install-config' initialized, please edit it before installation.
    exit
fi

if [ ! "$DB" -o ! "$VIEWVC_DIR" ]; then
    echo Please set up 'custis-install-config' before installation.
    exit
fi

################################################################################

export CVSROOT
export http_proxy

DEPS="python libapache2-mod-python rcs diff cvsnt subversion subversion-tools python-setuptools python-subversion python-mysqldb cvsgraph"

echo "*** Installing dependency packages: $DEPS"
apt-get install $DEPS

echo "*** Installing Pygments for Python"
wget http://pypi.python.org/packages/source/P/Pygments/Pygments-0.11.1.tar.gz
tar -zxf Pygments-0.11.1.tar.gz
cd Pygments-0.11.1
python setup.py install
cd ..

echo "*** Installing ViewVC into $VIEWVC_DIR"
if [ ! -e $VIEWVC_DIR/viewvc.conf ]; then
../viewvc-install <<EOF
$VIEWVC_DIR





EOF
fi

echo "*** Writing ViewVC configuration into $VIEWVC_DIR/viewvc.conf"
cat >"$VIEWVC_DIR/viewvc.conf" <<EOF
[general]
cvs_roots = cvs: $CVSROOT
root_parents = $SVNROOT : svn
cvsnt_exe_path = /usr/bin/cvsnt
mime_types_file = /etc/mime.types
address = Admin address: stas [gav-gav] custis [ru]
kv_files =
languages = en-us, ru-ru

[utilities]
rcs_dir = /usr/bin
cvsnt = /usr/bin/cvsnt
svn = /usr/bin/svn
diff = /usr/bin/diff
cvsgraph = /usr/bin/cvsgraph

[options]
allowed_views = markup, annotate, roots
authorizer = forbiddenre
checkout_magic = 0
cross_copies = 1
cvsgraph_conf = $VIEWVC_DIR/cvsgraph.conf
default_file_view = log
diff_format = h
docroot = /viewvc-static
enable_syntax_coloration = 1
generate_etags = 1
hide_attic = 1
hide_cvsroot = 1
hide_errorful_entries = 0
hr_breakable = 1
hr_funout = 0
hr_ignore_keyword_subst = 1
hr_ignore_white = 1
hr_intraline = 0
http_expiration_time = 600
limit_changes = 100
log_sort = date
mangle_email_addresses = 1
root_as_url_component = 1
short_log_len = 80
show_log_in_markup = 1
show_logs = 1
show_subdir_lastmod = 0
sort_by = file
sort_group_dirs = 1
svn_config_dir =
template_dir = templates
use_cvsgraph = 1
use_localtime = 1
use_pagesize = 20
use_rcsparse = 0
use_re_search = 0

[templates]

[cvsdb]
enabled = 1
host = $DB_HOST
socket = $DB_SOCKET
database_name = $DB
user = $DB_USER
passwd = $DB_PASSWD
readonly_user = $DB_USER
readonly_passwd = $DB_PASSWD

[vhosts]

[authz-forbidden]
forbidden =

[authz-forbiddenre]
forbiddenre = ^gpb(/|$)

[authz-svnauthz]
authzfile =
EOF

echo "*** Initializing database: $DB using $DB_USER@$DB_HOST"
$VIEWVC_DIR/bin/make-database <<EOF
$DB_HOST
$DB_USER
$DB_PASSWD
$DB
EOF

echo "*** Configuring Apache"
[ -f /etc/apache2/mods-available/mod_python.load ] && \
    ln -fs ../mods-available/mod_python.load /etc/apache2/mods-enabled/python.load
[ -f /etc/apache2/mods-available/python.load ] && \
    ln -fs ../mods-available/python.load /etc/apache2/mods-enabled/python.load
[ -f /etc/apache2/mods-available/rewrite.load ] && \
    ln -fs ../mods-available/rewrite.load /etc/apache2/mods-enabled/rewrite.load
mv /etc/apache2/sites-available/default /etc/apache2/sites-available/default.bak
grep -v '^\s*</VirtualHost>\s*$' /etc/apache2/sites-available/default.bak | grep -v '^\s*Include\s*/etc/apache2/sites-available/viewvc.conf\s*$' > /etc/apache2/sites-available/default
cat >>/etc/apache2/sites-available/default <<EOF
    Include /etc/apache2/sites-available/viewvc.conf
</VirtualHost>
EOF
cat >/etc/apache2/sites-available/viewvc.conf <<EOF
    # ViewVC at $VIEWVC_DIR
    Alias /viewvc $VIEWVC_DIR/bin/mod_python
    Alias /viewvc-static $VIEWVC_DIR/templates/docroot
    <Location ~ ^/*viewvc/*$>
        Options -Indexes
        RewriteEngine On
        RewriteRule /viewvc/viewvc.py [R,L]
    </Location>
    <Directory $VIEWVC_DIR/bin/mod_python>
        AddHandler python-program .py
        PythonHandler handler
        PythonDebug Off
    </Directory>
EOF

echo "*** Restarting Apache"
apache2ctl stop
sleep 1
apache2ctl start

echo "*** Building commit database for CVS"
$VIEWVC_DIR/bin/cvsdbadmin rebuild $CVSROOT

echo "*** Building commit database for Subversion repositories"
for i in `ls $SVNROOT`; do
    if [ -d "$SVNROOT/$i" ]; then
        $VIEWVC_DIR/bin/svndbadmin -v rebuild "$SVNROOT/$i"
    fi
done

echo "*** Setting up commit hook for CVS (job=$CVS_CRONJOB)"
if [ "$CVS_CRONJOB" ]; then
    VHOOK="touch $VIEWVC_DIR/.cvs-updated"
else
    VHOOK="$VIEWVC_DIR/bin/cvsdbadmin update $CVSROOT >/dev/null"
fi;
su $CVS_USER -s /bin/sh <<EOSH
CVSROOT=$CVSROOT cvs co CVSROOT
if [ ! $? ]; then
cd CVSROOT
mv loginfo loginfo.bak
grep -v '/.cvs-updated' <loginfo.bak | grep -v '/bin/cvsdbadmin update' >loginfo
cat >>loginfo <<EOF
* $VHOOK
EOF
chmod 755 loginfo
cvs ci -m 'CVS commit hook for ViewVC' loginfo
fi
EOSH
if [ "$CVS_CRONJOB" ]; then
    cat >$VIEWVC_DIR/cvshook <<EOF
#!/bin/sh
if [ -e "$VIEWVC_DIR/.cvs-updated" ]; then
    rm "$VIEWVC_DIR/.cvs-updated"
    $VIEWVC_DIR/bin/cvsdbadmin update $CVSROOT >/dev/null
fi
EOF
    chmod 755 $VIEWVC_DIR/cvshook
    cat >/etc/cron.d/viewvc-cvs-$CVS_CRONJOB <<EOF
*/5 * * * * $VIEWVC_DIR/cvshook
EOF
    /etc/init.d/cron reload
fi

echo "*** Setting up commit hooks for Subversion"
for i in `ls $SVNROOT`; do
    if [ -d "$SVNROOT/$i" ]; then
        cat >"$SVNROOT/$i/hooks/post-commit.0" <<EOF
#!/bin/sh
$VIEWVC_DIR/bin/svndbadmin update \$1 \$2
EOF
        chmod 755 "$SVNROOT/$i/hooks/post-commit.0"
        mv "$SVNROOT/$i/hooks/post-commit.0" "$SVNROOT/$i/hooks/post-commit"
    fi
done
